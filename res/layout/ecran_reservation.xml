<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="159dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitter"
                android:id="@+id/button" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_below="@+id/textView" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temps restant :"
                android:id="@+id/textView"
                android:layout_marginLeft="21dp" android:layout_below="@+id/button"
                android:layout_alignParentStart="true" android:layout_marginTop="32dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3minutes"
                android:id="@+id/textView2" android:layout_below="@+id/progressBar"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="370dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Joueur 1 :"
                    android:id="@+id/textView3" android:autoText="false"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Pseudo ..."
                    android:ems="10"
                    android:id="@+id/editText" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Joueur 2 :"
                      android:id="@+id/textView4" android:autoText="false"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textPersonName" android:text="Pseudo ..." android:ems="10"
                      android:id="@+id/editText2" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Joueur 3 :"
                      android:id="@+id/textView5" android:autoText="false"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textPersonName" android:text="Pseudo ..." android:ems="10"
                      android:id="@+id/editText3" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Joueur 4 :"
                      android:id="@+id/textView6" android:autoText="false"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textPersonName" android:text="Pseudo ..." android:ems="10"
                      android:id="@+id/editText4" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Joueur 5 :"
                      android:id="@+id/textView7" android:autoText="false"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textPersonName" android:text="Pseudo ..." android:ems="10"
                      android:id="@+id/editText5" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Joueur 6 :"
                      android:id="@+id/textView8" android:autoText="false"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:inputType="textPersonName" android:text="Pseudo ..." android:ems="10"
                      android:id="@+id/editText6" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmer"
                    android:id="@+id/button2"
                    android:layout_gravity="center|top"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Vous jouerez en piste 3"
                    android:id="@+id/textView9" android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>